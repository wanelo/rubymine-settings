<templateSet group="user">
  <template name="pfl" value="puts &quot;#{__FILE__}:#{__LINE__}&quot;" description="puts file line" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="RUBY" value="true" />
    </context>
  </template>
  <template name="lfl" value="Rails.logger.error &quot;#{__FILE__}:#{__LINE__}&quot;&#10;" description="log file line" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="RUBY" value="true" />
    </context>
  </template>
  <template name="pap" value="puts %|#{__FILE__}:#{__LINE__} $A$:|; ap $A$&#10;" description="puts awesome print" toReformat="true" toShortenFQNames="true">
    <variable name="A" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="RUBY" value="true" />
    </context>
  </template>
</templateSet>